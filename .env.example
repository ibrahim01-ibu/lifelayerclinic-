PORT=3000
NODE_ENV=development

# Database (Local Docker)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=lifelayer
DATABASE_URL=postgres://postgres:postgres@localhost:5432/lifelayer

# Redis
REDIS_URL=redis://localhost:6379

# JWT / Security
JWT_SECRET=super-secret-dev-key-change-in-prod
JWT_EXPIRES_IN=1d

# Supabase (Optional for local dev if self-hosting postgres, but needed for bucket/auth if using cloud)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# External Services (Placeholders)
OPENAI_API_KEY=sk-placeholder
RESEND_API_KEY=re_placeholder
